{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@store/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src", "globals.d.ts"]
}
